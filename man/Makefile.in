srcdir = @srcdir@
VPATH = @srcdir@
prefix = @prefix@

@SET_MAKE@

SUBDIRS = man1 man3 man7 man8


all: 
	@ for dir in $(SUBDIRS); do\
	(cd $$dir; $(MAKE) $@);\
	if [ $$? -ne 0 ]; then exit 3; fi\
	done;

clean:
	@ for dir in $(SUBDIRS); do\
	(cd $$dir; $(MAKE) $@)\
	done;

distclean:: clean
	@ for dir in $(SUBDIRS); do\
	(cd $$dir; $(MAKE) $@)\
	done;\
	rm -f Makefile *~

install::
	@ for dir in $(SUBDIRS); do\
	(cd $$dir; $(MAKE) $@);\
	if [ $$? -ne 0 ]; then exit 3; fi\
	done;

uninstall::
	@ for dir in $(SUBDIRS); do\
	(cd $$dir; $(MAKE) $@)\
	done;
