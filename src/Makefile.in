srcdir = @srcdir@
VPATH = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@

CC = @CC@

@SET_MAKE@


DIRS = liburlencode lib mwd mwadm mwserver mwgwd mwcall mwbd test

all: 
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE) $@);\
	if [[ $$? -ne 0 ]]; then exit 3; fi\
	done;

clean: 
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE) $@)\
	done;

distclean: 
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE) $@)\
	done; 
	rm -f Makefile *~


tags:
	rm TAGS
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE) $@)\
	done;
	etags -a -o TAGS include/*.h

test:
	(cd $@; $(MAKE) $@)

depend:
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE) $@);\
	if [[ $$? -ne 0 ]]; then exit 3; fi\
	done;

install: all
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE)  $@)\
	done;

uninstall:
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE) $@)\
	done;

