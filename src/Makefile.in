srcdir = @srcdir@
VPATH = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@

CC = @CC@

@SET_MAKE@


DIRS = liburlencode lib mwd mwadm mwserver mwgwd mwcall mwevent mwbd test

all: 
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE) $@);\
	if [ $$? -ne 0 ]; then exit 3; fi\
	done;

clean: 
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE) $@)\
	done;

distclean: 
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE) $@)\
	done; 
	rm -f Makefile *~ TAGS
	rm -f include/version.h\

doxy::
	doxygen

TAGS::
	rm -f TAGS
	etags -o TAGS ../include/*.h
	etags -a -o TAGS include/*.h
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE) $@)\
	done;

test:
	(cd $@; $(MAKE) $@)

depend:
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE) $@);\
	if [ $$? -ne 0 ]; then exit 3; fi\
	done;

dep: depend

install: all
	@ /bin/echo 
	@ /bin/echo "Install begins"
	@ /bin/echo 
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE)  $@)\
	done;
	@ /bin/echo 
	@ echo "Install complete"
	@ /bin/echo 

uninstall:
	@ for dir in $(DIRS); do\
	(cd $$dir; $(MAKE) $@)\
	done;

