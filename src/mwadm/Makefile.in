srcdir = @srcdir@
VPATH = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@

CC = @CC@
INSTALL = @INSTALL@

INCLUDES = -I../include 

INCPATH = ../include

CFLAGS =  $(INCLUDES) -g

LIBS =  -L../lib @readlinelib@ -lMidWay
LIB = @LIBS@
LDFLAGS = $(LIBS) 

OBJ = mwadm.o commands.o

EXE = mwadm

all: $(EXE)

mwadm: $(OBJ)
	$(CC) -o $@ $(OBJ) $(LIBS)

depend:
	makedepend -Y *.c

clean:
	rm -f mwadm $(OBJ) core 

distclean:
	rm -f Makefile *~

install:
	$(INSTALL)  mwadm @bindir@/mwadm

uninstall:
	rm -f @bindir@/mwadm

tags:
	etags -a -o ../TAGS *.c *.h

# DO NOT DELETE

mwadm.o: $(INCPATH)/MidWay.h mwadm.c $(INCPATH)/ipctables.h

commands.o: commands.c $(INCPATH)/MidWay.h  $(INCPATH)/ipctables.h $(INCPATH)/ipcmessages.h
