srcdir = @srcdir@
VPATH = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@

CC = @CC@
INSTALL = @INSTALL@

LIBS = -lMidWay -lurlencode -lpthread

INCLUDES = -I../include 

CFLAGS = @CFLAGS@ $(INCLUDES)

LDFLAGS = -L../lib -L../liburlencode

EXE = mwgwd

OBJS = SRBprotocolServer.o connections.o tcpserver.o gateway.o store.o broker.o

all: $(EXE) 

clean:
	rm -f $(EXE) $(OBJS) core store

distclean:
	rm -f Makefile  *~

install:
	$(INSTALL)  mwgwd @bindir@/mwgwd

uninstall:
	rm -f @bindir@/mwgwd

tags:
	etags -a -o ../TAGS *.c *.h

depend:
	makedepend -- $(CFLAGS) -- *.c

mwgwd: $(OBJS)
	$(CC) $(LDFLAGS) -o $@ $(OBJS) -lefence $(LIBS)

# used for testing store module.
store: store.c store.h 
	 $(CC) -g -DMODULETEST -o store store.c -I../include -L../lib -L../liburlencode/ -lurlencode -lMidWay
